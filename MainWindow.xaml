        xmlns:control="clr-namespace:WPFWeChatDemo.Controls"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="MainWindow" Height="450" Width="800">
